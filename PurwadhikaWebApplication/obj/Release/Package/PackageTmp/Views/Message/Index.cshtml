@model PurwadhikaWebApplication.Models.MessageMaster


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MessageLayout.cshtml";
}

@*@{Html.RenderPartial("~/Views/Message/Compose.cshtml", Model); }*@
@{Html.RenderAction("Compose","Message"); }
@section scripts{
    <script>
    $(document).ready(
            function () {
                $('#btnCompose').click(function () {
                    $.get('@Url.Action("ComposeContent", "Message")', function (data) {
                        $('#partialArea').html(data);
                    });
                });
                $('#btnInbox').click(function () {
                    $.get('@Url.Action("InboxContent", "Message")', function (data) {
                        $('#partialArea').html(data);
                    });
                });
                $('#btnSentbox').click(function () {
                    $.get('@Url.Action("SentboxContent", "Message")', function (data) {
                        $('#partialArea').html(data);
                    });
                });
            });
    </script>
}


