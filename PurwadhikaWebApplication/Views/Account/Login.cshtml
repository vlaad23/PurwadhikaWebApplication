@using PurwadhikaWebApplication.Models
@model LoginViewModel
@{
    ViewBag.Title = "Welcome to Purwadhika ITPreneur School";
    Layout = null;
}


@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

        <div style="width:100%;height:40%">
            <img id="img-head" class="img-responsive" src="~/Images/Logo-Purwadhika.png" style="height:80%; width:72%; margin-left:auto; margin-right:auto; display:block" />
        </div>

        <div align="center">
            
                              
                <div align="center"  style="border:solid; border-radius:15px 15px; border-color:#d3d3d3; margin-left:20%; margin-right:20%; margin-top:3%">
                        @*<span class="glyphicon glyphicon-user" style="font-size:50px; margin-top:5%; margin-bottom:5%"></span>*@
                        <h1 style="font-family:sans-serif">Log In Panel</h1>  
                       <div style="margin-top:3%; margin-bottom:1%"> 
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", style = "width:80%;height:40px;border:solid; border-radius:15px 15px;border-color:#d3d3d3;font-family:sans-serif;font-size:20px;padding-left:15px;opacity:0.8" })
                           <div> 
                                 @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", style = "color:red" })
                           </div>
                       </div>
                    
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", style = "width:80%;height:40px;border:solid; border-radius:15px 15px;border-color:#d3d3d3;font-family:sans-serif;font-size:20px;padding-left:15px;opacity:0.8"  })
                        <div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", style="color:red" })
                        </div>
                    </div>

                        <div align="center" style="margin-top:3%; margin-bottom:3%">
                            <div class="checkbox" style="font-family:sans-serif">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>

                        <div align="center">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group" align="center">
                            <input type="submit" value="Log In" style="width:120px;height:45px" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("UserIndex", "Admin") + "'")" ; />

                        </div>
                        <p>
                            @Html.ActionLink("Register as an employer", "RegisterEmployer", "Account")
                        </p>
                    </div>
                     @*Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@                
       
        </div>

}

        @*<div class="col-md-4">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}